<Window x:Class="Cursed.Views.WinDeliveryNaklEd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cursed.Views"
        mc:Ignorable="d"
        Title="WinDeliveryNaklEd" Height="420" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <TextBlock Text="Номер" Margin="2,4,2,4" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding SelectedDeliveryNote.Number}" Margin="2,4,2,4"/>

            <TextBlock Text="Дата" Margin="2,4,2,4" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding SelectedDeliveryNote.DeliveryDate}" Margin="2,4,2,4" Width="100"/>

        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="Сохранить" Padding="5" Margin="5" Command="{Binding SaveDeliveryNote}"/>
            <Button Content="Закрыть" Padding="5" Margin="5" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
